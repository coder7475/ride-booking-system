{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!node_modules/**"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        ".vercel/output/**"
      ],
      "env": [
        "PORT",
        "HOST",
        "NODE_ENV",
        "DB_URI",
        "JWT_ACCESS_SECRET",
        "JWT_REFRESH_SECRET"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "!node_modules/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "!node_modules/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "remoteCache": {
    "enabled": true,
    "signature": false
  }
}
